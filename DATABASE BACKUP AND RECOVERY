//Create a MySQL Table 
CREATE DATABASE codtech_db;
USE codtech_db;

CREATE TABLE employees (
    id INT PRIMARY KEY,
    name VARCHAR(100),
    department VARCHAR(50),
    email VARCHAR(100)
);

INSERT INTO employees VALUES
(1, 'Akash', 'IT', 'akash@example.com'),
(2, 'Neha', 'HR', 'neha@example.com');

//BACKUP the Database
mysqldump -u root -p codtech_db > codtech_db_backup.sql

//Simulate a Failure
DROP DATABASE codtech_db;

//RESTORE the Database
mysql -u root -p < codtech_db_backup.sql

//Backup Command Used:
mysqldump -u root -p codtech_db > codtech_db_backup.sql

/Restore Command Used:
mysql -u root -p < codtech_db_backup.sql



